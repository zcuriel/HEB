            {
                <tr>
                    <td>
                        <div class="card border-success mb-3" style="max-width: 15rem;">
                            <div class="card-header bg-transparent border-success text-center">
                                <button type="button" class="btn btn-primary" onclick="window.open('@itemArray[elem].SourceUrl')">View</button>
                                <input type="button" class="btn btn-primary" 
                                       onclick="savePicture('@itemArray[elem].SourceUrl','@itemArray[elem].FileName','@itemArray[elem].Height','@itemArray[elem].Width');" value="Save" />
                            </div>
                            <div class="card-body text-success">
                                <img src="@itemArray[elem++].FileName" height="200" width="200" />
                            </div>
                            <div class="card-footer bg-transparent border-success text-center">@elem</div>
                        </div>
                    </td>
                    <td>
                        <div class="card border-success mb-3" style="max-width: 15rem;">
                            <div class="card-header bg-transparent border-success text-center">
