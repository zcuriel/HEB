@using HEB.NetGiphyA.Common
@model PictureViewModel
@{
    ViewBag.Title = "HEB - Animated Gifs";
}
<div class="row" style="padding-top:50px">
    <h2> Animated Gifs Results</h2>
</div>
<div class="container" style="padding-bottom:15px; padding-top:10px;">
    @{
        string alertType = "alert-danger";
        @if (Model.IsError)
        {
            <div class="alert @alertType" role="alert">
                @Model.Message
            </div>
        }
    }
    <table>
        @{
            int cicle = Model.Pictures.Count / Constants.MAX_PIC_PER_ROW;
            int elem = 0;
            var itemArray = Model.Pictures.ToArray();
