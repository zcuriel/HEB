                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#viewImg">View</button>
                        &nbsp;&nbsp;
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Save</button>
                    </td>
                    <td>
                        <img src="@itemArray[elem++].SourceUrl" height="200" width="200" /> <br />
