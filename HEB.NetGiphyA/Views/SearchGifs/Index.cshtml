
@{
    ViewBag.Title = "HEB - SEARCH FOR GIFS";
}

<div class="row" style="padding-top:50px">
    <h2> Animated Gifs</h2>
</div>
<div class="container" style="border: 2px solid grey; padding-bottom:15px; padding-top:10px;">
    <form method="get" asp-controller="SearchGifs" asp-action="SearchAnimatedGifs" name="myForm" id="myForm">
        <div class="form-group">
            <label for="searchtextInput" style="text-shadow:none;">Search Text Input: </label>
            <input type="text" class="form-control" name="searchtext" id="searchtext"
                   aria-describedby="searchTextHelp" placeholder="Animated Gifs search input" />
            <small id="searchTextHelp" class="form-text text-decoration-none" style="font-size: initial; text-shadow:none;">Search all the animated gifs you want!!.</small>
        </div>
        <div class="form-group">
            <label for="numberResultsInput" style="text-shadow:none;">Number of Results: </label> <br />
            <select name="searchLimit" class="form-control" id="searchLimit"
                    asp-items="@Html.GetEnumSelectList<SearchLimit>()"></select>
        </div>
        <div class="form-group">
            <label for="languageInput" style="text-shadow:none;">Language: </label> <br />
            <select class="form-control" name="language" id="language">
                <option value="en">English</option>
                <option value="es">Spanish</option>
                <option value="fr">French</option>
            </select>
        </div>
        <div class="form-group">
            <input type="reset" class="btn btn-primary" />
            <input type="button" class="btn btn-primary" value="Submit" onclick="validateForm();" />
</div>
    </form>
</div>

<div id="exampleModalLive" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLiveLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLiveLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Woohoo, you're reading this text in a modal!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

