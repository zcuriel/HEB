
@{
    ViewBag.Title = "HEB - SEARCH FOR GIFS";
}

<div class="row" style="padding-top:50px">
    <h2> Animated Gifs</h2>
</div>
<div class="container" style="border: 2px solid grey; padding-bottom:15px; padding-top:10px;">
    <form method="get" asp-controller="SearchGifs" asp-action="SearchAnimatedGifs">
        <div class="form-group">
            <label for="searchtextInput">Search Text Input: </label>
            <input type="text" class="form-control" name="searchtext" id="searchtext" aria-describedby="searchTextHelp" placeholder="Animated Gifs search input">
            <small id="searchTextHelp" class="form-text text-muted">Search all the animated gifs you want!!.</small>
        </div>
        <div class="form-group">
            <label for="numberResultsInput">Number of Results: </label> <br />
            <select name="searchLimit" id="searchLimit" asp-items="@Html.GetEnumSelectList<SearchLimit>()"></select>
        </div>
        <div class="form-group">
            <label for="languageInput">Language: </label> <br />
            <select name="language" id="language">
                <option value="en">English</option>
                <option value="es">Spanish</option>
                <option value="fr">French</option>
            </select>
        </div>
        <input type="reset" class="btn btn-primary" />
        <input type="submit" class="btn btn-primary" />
    </form>
</div>
