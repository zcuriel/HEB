@model PictureCategoryViewModel
@{
    ViewBag.Title = "HEB - Edit my Gighys";
}
<div class="row" style="padding-top:50px">
    <h2> Edit Animated Giphy</h2>
</div>
<div class="container" style="border: 2px solid grey; padding-bottom:15px; padding-top:10px;">
    <form method="post" action="/Picture/Edit">
        <div class="form-group">
            <input type="hidden" asp-for="@Model.Picture.PictureId" />
            <input type="hidden" asp-for="@Model.Picture.SourceUrl" />
            <input type="hidden" asp-for="@Model.Picture.FileName" />
            <input type="hidden" asp-for="@Model.Picture.Height" />
            <input type="hidden" asp-for="@Model.Picture.Width" />
            <label asp-for="@Model.Picture.Name"></label> :
            <input type="text" style="color:black" class="form-control" asp-for="@Model.Picture.Name">
            <span asp-validation-for="@Model.Picture.Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Picture.Description"></label> :
            <input type="text" style="color:black" class="form-control" asp-for="@Model.Picture.Description">
        </div>
        <div class="form-group">
            <label for="categoryLbl" style="text-shadow:none;">Category : </label>
            <select asp-for="@Model.Picture.CategoryId" class="form-control">
                @foreach (var item in Model.UserCategories)
                {
                    <option value="@item.CategoryId">@item.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input type="button" class="btn btn-primary" onclick="goBack()" value="Cancel" />
            <input type="submit" class="btn btn-primary" />
        </div>
    </form>
</div>
<div class="card container">
    <img src="@Url.Action("GetFile", "Image", new { PictureId = Model.Picture.PictureId })" class="card-img-top" alt="@Model.Picture.Name">
    <div class="card-body">
        <p class="card-text">@Model.Picture.SourceUrl</p>        
    </div>
</div>
<p>&nbsp;</p>
<script type="text/javascript">
    function goBack() {
        window.location = "/Picture/";
    }
</script>